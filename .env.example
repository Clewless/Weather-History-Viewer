# Frontend port (default: 3000)
FRONTEND_PORT=3000

# Backend port (default: 3001)
PORT=3001

# Frontend origin for CORS configuration (default: http://localhost:3000)
CORS_ORIGIN=http://localhost:3000

# Open-Meteo API key (optional but recommended for higher rate limits)
# Get a free key at https://open-meteo.com/en/docs
OPEN_METEO_API_KEY=your_open_meteo_api_key_here

# Frontend API base URL (for production deployments where frontend and backend are separate)
# Default: http://localhost:3001/api (for development)
API_BASE_URL=http://localhost:3001/api

# Environment
NODE_ENV=development